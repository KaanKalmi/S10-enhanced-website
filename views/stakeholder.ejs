<%- include('partials/head', {current:'/stakeholder'});%>
<section class="flex">
<h2> <% company.name%> </h2>
<link rel="stylesheet" href="overview.css">
    <form method="POST" action="/">
        <fieldset class="type-selector">
            <legend>Select a stakeholder type</legend>
            <input type="radio" id="staff" name="stakeholderType">
            <label for="staff"> Staff </label>
            <input type="radio" id="supplier" name="stakeholderType">
            <label for="supplier"> Suppliers </label>
            <input type="radio" id="client" name="stakeholderType">
            <label for="client"> Clients </label>
            <input type="radio" id="environment" name="stakeholderType">
            <label for="environment"> Environment </label>
        </fieldset>
            <div class="wrapper">
                <label for="name">Name</label>
                    <textarea name="message" id="name" required placeholder="Type the name of your stakeholder here"></textarea>
                    <div> <button type="submit">Save stakeholder</button> </div>
            </div>
    </form>
</section>
</div>