                        <script defer src="switch.js"></script>
                        <div class="theme-switcher">
                            <!-- data-theme is een custom data attribute en zorgt ervoor dat je data kan opslaan in een HTML element-->
                            <!-- aria-pressed is een ARIA (Accessible Rich Internet Applications) attribute dat aangeeft of de button ingedrukt is of niet-->
                            <button data-theme="dark" aria-pressed="true">Dark</button>
                            <button data-theme="forest" aria-pressed="false">Forest</button>
                            <button data-theme="light" aria-pressed="false">Light</button>
                            <button data-theme="cherry" aria-pressed="false">Cherry</button>
                        </div>
                    </div>
                </ul>
            </nav>
        </header>